<p style="color: green"><%= notice %></p>

<% content_for :title, "Authors" %>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Date de naissance</th>
      <th>Pays</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @authors.each do |author| %>
      <tr>
        <td><%= author.nom%></td>
        <td><%= author.date_naissance%></td>
        <td><%= author.pays%></td>
        <td><%= link_to 'Show this author', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: {confirm: 'Are you sure?'}%></td>
      </tr>
      <%end%>
  </tbody>
</table>
 
