<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date de sortie</th>
      <th>Pages</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Editor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= book.titre%></td>
        <td><%= book.date_de_sortie%></td>
        <td><%= book.pages%></td>
        <td><%= link_to 'Show this book', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?'}%></td>
      </tr>
      <%end%>
  </tbody>
</table>
<br>

<%= link_to "New book", new_book_path %>
